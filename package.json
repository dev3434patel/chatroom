{
  "name": "sparowtech-chat",
  "version": "1.0.0",
  "description": "SparowTech Chat - Anonymous 1-room chat app for up to 4 users with file sharing, session persistence, and 7-day auto-cleanup",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build-css-prod",
    "build-css": "tailwindcss -i ./public/input.css -o ./public/tailwind.css --watch",
    "build-css-prod": "tailwindcss -i ./public/input.css -o ./public/tailwind.css --minify",
    "vercel-build": "npm run build-css-prod"
  },
  "keywords": [
    "chat",
    "anonymous",
    "socket.io",
    "file-sharing",
    "real-time"
  ],
  "author": "SparowTech",
  "repository": {
    "type": "git",
    "url": "https://github.com/dev3434patel/chatroom.git"
  },
  "homepage": "https://dev3434patel.github.io/chatroom/",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "path": "^0.12.7",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "tailwindcss": "^4.1.13"
  }
}
